@model IEnumerable<CRUD_Porject.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-12">
        <h3>Customers</h3>
        <div class="d-flex justify-content-end mb-1">
            @Html.ActionLink("Add New", "Create", "Customers", new { }, new { @class = "btn btn-primary btn-sm" })
        </div>
        <table class="table table-bordered table-striped border-success">
            <thead class="text-bg-dark">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.CustomersName)</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(x => p.CustomersName)</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", "Customers", new { id = p.CustomerID }, new { @class = "btn btn-secondary btn-sm" })
                            <a href="@Url.Action("Delete", "Customers", new {id=p.CustomerID})" class="btn btn-danger btn-sm @(p.Sales.Count > 0 ? "disabled" :"")">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
