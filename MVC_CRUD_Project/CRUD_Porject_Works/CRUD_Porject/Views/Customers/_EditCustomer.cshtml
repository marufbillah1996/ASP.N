@model CRUD_Porject.Models.Customer
@using (Ajax.BeginForm("EditCustomer", "Customers", new { }, new AjaxOptions
{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "alert",
    LoadingElementId = "spinner"

}, new { id = "f" }))
{
    @Html.HiddenFor(x => x.CustomerID)
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.CustomersName, new { @class = "col-form-label col-form-label-sm col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.CustomersName, new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(x => x.CustomersName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}



